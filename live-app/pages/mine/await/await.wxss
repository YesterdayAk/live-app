.await {
  min-height: 100vh;
  background: #FAFAFA;
}
.await .contentBox {
  display: flex;
  justify-content: center;
}
.await .contentBox .content {
  width: 92%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.await .contentBox .content .start_broadcast {
  width: 100%;
  display: flex;
  flex-direction: column;
}
.await .contentBox .content .start_broadcast .sign {
  display: flex;
  align-items: center;
  margin: 34rpx 0 30rpx;
}
.await .contentBox .content .start_broadcast .sign .line {
  width: 8rpx;
  height: 36rpx;
  background: #007AFF;
  border-radius: 430rpx;
  margin: 0 0 0 16rpx;
}
.await .contentBox .content .start_broadcast .sign .title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333333;
  line-height: 50rpx;
  margin: 0 0 0 12rpx;
}
.await .contentBox .content .start_broadcast .information {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.await .contentBox .content .start_broadcast .information .container {
  width: 100%;
  display: flex;
  flex-direction: column;
  background: #FEFFFE;
  box-shadow: 0px 4rpx 4rpx 2rpx rgba(0, 0, 0, 0.1);
  border-radius: 16rpx;
  margin: 0 0 24rpx 0;
}
.await .contentBox .content .start_broadcast .information .container .live_state {
  margin: 26rpx 0 20rpx 24rpx;
  font-size: 26rpx;
  font-weight: normal;
  color: #007AFF;
  line-height: 26rpx;
}
.await .contentBox .content .start_broadcast .information .container .live_title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  line-height: 30rpx;
  margin: 0 0 16rpx 24rpx;
}
.await .contentBox .content .start_broadcast .information .container .live_message {
  width: 610rpx;
  font-size: 26rpx;
  font-weight: normal;
  color: #999999;
  line-height: 26rpx;
  margin: 0 0 20rpx 24rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.await .contentBox .content .start_broadcast .information .container .timeWait {
  display: flex;
  margin: 0 24rpx 25rpx;
  flex-direction: column;
}
.await .contentBox .content .start_broadcast .information .container .timeWait .timeWait-left {
  display: flex;
}
.await .contentBox .content .start_broadcast .information .container .timeWait .timeWait-left image {
  width: 24rpx;
  height: 24rpx;
}
.await .contentBox .content .start_broadcast .information .container .timeWait .timeWait-left .date {
  font-size: 24rpx;
  font-weight: normal;
  color: #999999;
  line-height: 24rpx;
  margin: 0 0 0 8rpx;
}
