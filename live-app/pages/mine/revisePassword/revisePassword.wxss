.revisePassword {
  min-height: 100vh;
  background: #FAFAFA;
}
.revisePassword .contentBox {
  display: flex;
  justify-content: center;
}
.revisePassword .contentBox .content {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.revisePassword .contentBox .content .content-top {
  width: 93%;
  display: flex;
}
.revisePassword .contentBox .content .content-top .form {
  width: 100%;
}
.revisePassword .contentBox .content .content-top .form .information {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.revisePassword .contentBox .content .content-top .form .information .information-top {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 40rpx 0 0;
}
.revisePassword .contentBox .content .content-top .form .information .information-top .code {
  background: linear-gradient(to right, #7880fc 0%, #2eb3ff 100%);
  border-radius: 10rpx;
  font-size: 22rpx;
  color: #fff;
}
.revisePassword .contentBox .content .content-top .form .information .information-bottom {
  width: 100%;
  display: flex;
  justify-content: center;
  position: absolute;
  bottom: 76rpx;
}
.revisePassword .contentBox .content .content-top .form .information .information-bottom .enter {
  width: 680rpx;
  height: 90rpx;
  background: linear-gradient(315deg, #1D77FF 0%, #6EBEFF 100%);
  border-radius: 344rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  font-weight: normal;
  color: #FEFFFE;
  line-height: 28rpx;
}
.revisePassword .van-cell {
  display: flex;
  align-items: center;
}
